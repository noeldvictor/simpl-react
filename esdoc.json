{
  "source": "./src",
  "destination": "./docs",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "undocumentIdentifier": {
          "enable": false
        },
        "brand": {
          "title": "Simpl-react"
        }
      }
    },
    {
      "name": "esdoc-ecmascript-proposal-plugin",
      "option": {
        "classProperties": true,
        "objectRestSpread": true,
        "decorators": true
      }
    },
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "replaces": [
          { "from": "^src/", "to": "lib/" },
          { "from": ".js$", "to": "" }
        ]
      }
    }
  ]
}
